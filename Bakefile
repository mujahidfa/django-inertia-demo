docker/build:
    docker build -t pingcrm .

docker/run:
    docker run -p 8000:8000 pingcrm


docker: setup docker/build docker/run
    echo "All ready"

sync:
	pip-compile -o requirements.txt

setup:
	pip install -r requirements.txt
	pip install coverage pip-tools
	npm install
	npm run build
	python manage.py migrate
	python populate.py
	python manage.py createsuperuser  --username admin --email admin@admin.com

test:
	coverage run manage.py test
	coverage report

all: setup test docker-build


update:
    cp ../pingcrm/resources/js/{Pages,Shared} demo/static/src/ -rf
    cp ../pingcrm/resources/css/*.css demo/static/src/
